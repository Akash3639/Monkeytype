# Dockerfile
FROM python:latest
WORKDIR /app
COPY requirements.txt .
RUN pip install --no-cache-dir -r requirements.txt
COPY . .
EXPOSE 5000
CMD ["python", "app.py"]

# app.py
from flask import Flask

app = Flask(__name__)

@app.route("/")
def home():
    return "Hello from simple Flask Docker!"

if __name__ == "__main__":
    app.run(host="0.0.0.0", port=5000)

# requirements.txt
Flask=2.3.3

# sudo docker build -t program-3 .
# sudo docker run -p 5000:5000 program-3
